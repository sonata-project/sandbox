{
    "name": "sonata-project/sandbox",
    "description": "Sonata Project's sandbox (with ecommerce bundles)",

    "license": "MIT",

    "autoload": {
        "psr-0": { "": "src/" },
        "classmap": [
            "app/AppKernel.php"
        ]
    },

    "minimum-stability": "stable",

    "require": {
        "php": "^7.2.0",
        "ext-bcmath" : "*",

        "symfony/symfony": "^3.4",
        "symfony/assetic-bundle": "^2.8.2",
        "symfony/swiftmailer-bundle": "^3.1.6",
        "symfony/monolog-bundle": "^3.1.2",
        "twig/extensions": "^1.5.1",

        "sensio/distribution-bundle": "^5.0.21",
        "sensio/framework-extra-bundle": "^5.1.5",
        "sensio/generator-bundle": "^3.1.7",

        "jms/serializer-bundle": "^1.5.0",

        "doctrine/doctrine-bundle": "^1.8.1",
        "doctrine/doctrine-migrations-bundle": "^1.3.1",
        "doctrine/doctrine-fixtures-bundle": "^3.0.2",

        "symfony-cmf/routing-bundle": "^2.0.3",

        "sonata-project/datagrid-bundle": "^2.3.1",
        "sonata-project/easy-extends-bundle": "^2.4.0",
        "sonata-project/seo-bundle": "^2.5.0",
        "sonata-project/doctrine-extensions": "^1.0.2",
        "sonata-project/intl-bundle": "^2.4.0",
        "sonata-project/admin-bundle": "^3.31.1",
        "sonata-project/doctrine-orm-admin-bundle": "^3.4.2",
        "sonata-project/notification-bundle": "^3.3.1",
        "sonata-project/block-bundle": "^3.12.0",
        "sonata-project/media-bundle": "^3.10.2",
        "sonata-project/user-bundle": "^4.0",
        "sonata-project/cache-bundle": "^2.4.0",
        "sonata-project/page-bundle": "^3.7.1",
        "sonata-project/formatter-bundle": "^3.4.1",
        "sonata-project/news-bundle": "^3.3.0",
        "sonata-project/exporter": "^1.8.0",
        "sonata-project/timeline-bundle": "^3.3.0",
        "sonata-project/classification-bundle": "^3.6.1",
        "sonata-project/ecommerce": "^3.2",
        "sonata-project/comment-bundle": "^3.1.0",
        "sonata-project/google-authenticator": "^2.0",

        "michelf/php-markdown": "^1.8.0",
        "simplethings/entity-audit-bundle": "^v1.0.6",
        "willdurand/faker-bundle": "^1.3.0",

        "mopa/bootstrap-bundle": "^3.2.2",
        "twbs/bootstrap": "^3.3.7",

        "stof/doctrine-extensions-bundle": "^1.3.0",

        "incenteev/composer-parameter-handler": "^2.0",

        "nelmio/api-doc-bundle": "^2.13",
        "friendsofsymfony/rest-bundle": "^2.3",
        "guzzlehttp/guzzle": "^6.3"
    },

    "require-dev": {
        "behat/behat": "^3.4.3",
        "behat/common-contexts": "^1.2.0",
        "behat/mink": "^1.7.1",
        "behat/mink-browserkit-driver": "^1.3.2",
        "behat/mink-extension": "^2.3.0",
        "behat/mink-goutte-driver": "^1.2.1",
        "behat/mink-selenium2-driver": "^1.3.1",
        "phing/phing": "^2.16",
        "phpunit/phpunit": "^4.2"
    },

    "config": {
        "sort-packages": true
    },

    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },

    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Mopa\\Bundle\\BootstrapBundle\\Composer\\ScriptHandler::postInstallSymlinkTwitterBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Mopa\\Bundle\\BootstrapBundle\\Composer\\ScriptHandler::postInstallSymlinkTwitterBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-create-project-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Mopa\\Bundle\\BootstrapBundle\\Composer\\ScriptHandler::postInstallSymlinkTwitterBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "php bin/load_data.php"
        ]
    },

    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink",
        "incenteev-parameters": [{
            "file": "app/config/parameters.yml",
            "env-map": {
                "database_driver":   "DATABASE_DRIVER",
                "database_host":     "DATABASE_HOST",
                "database_name":     "DATABASE_NAME",
                "database_user":     "DATABASE_USER",
                "database_password": "DATABASE_PASSWORD",
                "mailer_transport":  "MAILER_TRANSPORT",
                "mailer_host":       "MAILER_HOST",
                "mailer_user":       "MAILER_USER",
                "mailer_password":   "MAILER_PASSWORD",

                "sonata_media.cdn.host": "SONATA_MEDIA_CDN_HOST"
            }
        }]
    }
}
