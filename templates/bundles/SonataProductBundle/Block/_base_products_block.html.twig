{% extends sonata_block.templates.block_base %}

{% block block %}
    <section>
        <div class="row">
            <div class="col-xs-6 col-6">
                {% if settings.title %}
                    <h3>{{ settings.title }}</h3>
                {% endif %}
            </div>

            <div class="col-xs-6 col-6 text-right">
                <a class="btn btn-outline-secondary" href="{{ url('sonata_catalog_index') }}">
                    <i class="fas fa-list"></i>&nbsp;
                    {{ 'view_all_products'|trans({}, 'SonataProductBundle') }}</a>
            </div>
        </div>

        <div class="row product-grid">
            {% if products|length > 0 %}
                <div class="list-group list-group-horizontal">
                    {% for product in products %}

                        {% if sonata_product_has_enabled_variations(product) or not sonata_product_has_variations(product) %}
                            <div class="col-sm-3" itemscope itemtype="http://schema.org/Product">
                                {% include '@SonataProduct/Catalog/_product_grid.html.twig' %}
                            </div>
                        {% endif %}

                    {% endfor %}
                </div>
            {% else %}
                <p>{{ 'no_product_found'|trans({}, 'SonataProductBundle') }}</p>
            {% endif %}
        </div>
    </section>
{% endblock %}
