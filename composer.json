{
    "name": "sonata-project/sandbox",
    "description": "Sonata Project's sandbox",

    "autoload": {
        "psr-0": { "": "src/" }
    },

    "license": "MIT",

    "minimum-stability": "stable",

    "require": {
        "php": ">=5.3.3",

        "twig/twig": "~1.12",
        "twig/extensions": "~1.0",

        "symfony/symfony": "~2.3",
        "symfony/assetic-bundle": "~2.3",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.3",

        "sensio/distribution-bundle": "~2.3",
        "sensio/framework-extra-bundle": "~2.3",
        "sensio/generator-bundle": "~2.3",

        "doctrine/doctrine-bundle": "~1.2",
        "doctrine/doctrine-migrations-bundle": "dev-master",
        "doctrine/migrations": "dev-master",
        "doctrine/doctrine-fixtures-bundle": "2.1.*@dev",
        "doctrine/data-fixtures": "1.0.*@dev",

        "jms/security-extra-bundle": "~1.5",
        "jms/di-extra-bundle": "~1.4",

        "symfony-cmf/routing-bundle": "1.1.*@dev",
        "symfony-cmf/routing": "1.1.*@dev",

        "knplabs/gaufrette": "0.1.4",
        "knplabs/knp-menu-bundle": "1.1.x-dev",
        "knplabs/knp-markdown-bundle": "1.2.*@dev",

        "sonata-project/easy-extends-bundle": "~2.1@dev",
        "sonata-project/seo-bundle": "~1@dev",
        "sonata-project/doctrine-extensions": "~1@dev",
        "sonata-project/intl-bundle": "~2.1@dev",
        "sonata-project/admin-bundle": "2.2.*@dev",
        "sonata-project/doctrine-orm-admin-bundle": "2.2.*@dev",
        "sonata-project/notification-bundle": "~2.2@dev",
        "sonata-project/block-bundle": "~2.2@dev",
        "sonata-project/media-bundle": "2.2.*@dev",
        "sonata-project/user-bundle": "2.2.*@dev",
        "sonata-project/cache-bundle": "~2.1@dev",
        "sonata-project/page-bundle": "~2.3@dev",
        "sonata-project/formatter-bundle": "~2.3@dev",
        "sonata-project/news-bundle": "~2.3@dev",
        "sonata-project/exporter": "~1.3@dev",

        "dflydev/markdown": "~1.0",
        "simplethings/entity-audit-bundle": "~0.5",
        "willdurand/faker-bundle": "~1.0"
    },

    "require-dev": {
        "phpunit/phpunit": "~3.7",
        "guzzle/guzzle": "~3.0"
    },

    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },

    "config": {
        "bin-dir": "bin"
    },

    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.3.x-dev"
        }
    }
}
