<div class="row">
    <p>Want to stay in touch with us? Subscribe to our monthly newsletter.</p>

    <form id="newsletter-form" name="newsletter-form" method="post" action="{{ path('sonata_demo_newsletter') }}" data-name="sonata-ajax" data-target="newsletter-confirmation" class="form-inline">
        <div class="col-sm-6 col-sm-offset-1">
            {{ form_widget(form.email, {'horizontal_input_wrapper_class': 'col-lg-12'}) }}
        </div>

        <div class="col-sm-3">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-envelope"></i>&nbsp; Subscribe</button>
        </div>

        {{ form_rest(form) }}
    </form>
    &nbsp;
</div>
<div id="newsletter-confirmation"></div>
