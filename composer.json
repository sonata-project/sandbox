{
    "name": "sonata-project/sandbox",
    "description": "Sonata Project's sandbox (with ecommerce bundles)",

    "license": "MIT",

    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "AppBundle\\": "src/AppBundle",
            "Sonata\\Bundle\\": "src/Sonata/Bundle"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "minimum-stability": "stable",

    "require": {
        "php": "^7.2",
        "ext-bcmath": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-fixtures-bundle": "^3.0.2",
        "doctrine/doctrine-migrations-bundle": "^1.3.1",
        "doctrine/orm": "^2.5",
        "friendsofsymfony/rest-bundle": "^2.6",
        "guzzlehttp/guzzle": "^6.3",
        "jms/serializer-bundle": "^2.3.1 || ^3.0",
        "michelf/php-markdown": "^1.8",
        "mopa/bootstrap-bundle": "^3.2.2",
        "nelmio/api-doc-bundle": "^2.13.4",
        "sensio/framework-extra-bundle": "^5.5",
        "sonata-project/admin-bundle": "^3.31.1",
        "sonata-project/block-bundle": "^3.18.3",
        "sonata-project/cache-bundle": "^2.4",
        "sonata-project/classification-bundle": "^3.6.1",
        "sonata-project/comment-bundle": "^3.1",
        "sonata-project/datagrid-bundle": "^2.5",
        "sonata-project/doctrine-extensions": "^1.0.2",
        "sonata-project/doctrine-orm-admin-bundle": "^3.14",
        "sonata-project/easy-extends-bundle": "^2.4",
        "sonata-project/ecommerce": "^3.2.1",
        "sonata-project/exporter": "^1.8",
        "sonata-project/formatter-bundle": "^4.0",
        "sonata-project/google-authenticator": "^2.0",
        "sonata-project/intl-bundle": "^2.4",
        "sonata-project/media-bundle": "^3.10.2",
        "sonata-project/news-bundle": "^3.3",
        "sonata-project/notification-bundle": "^3.3.1",
        "sonata-project/page-bundle": "^3.7.1",
        "sonata-project/seo-bundle": "^2.5",
        "sonata-project/timeline-bundle": "^3.3",
        "sonata-project/user-bundle": "^4.0",
        "stof/doctrine-extensions-bundle": "^1.3",
        "symfony-cmf/routing-bundle": "^2.0.3",
        "symfony/acl-bundle": "^2.0",
        "symfony/browser-kit": "^4.2",
        "symfony/debug": "^4.4",
        "symfony/debug-bundle": "^4.4",
        "symfony/flex": "^1.6",
        "symfony/form": "^4.4",
        "symfony/monolog-bundle": "^3.1",
        "symfony/polyfill-apcu": "^1.0",
        "symfony/security-acl": "^3.0",
        "symfony/security-csrf": "^4.4",
        "symfony/serializer-pack": "^1.0",
        "symfony/swiftmailer-bundle": "^3.4",
        "symfony/translation": "^4.4",
        "symfony/twig-pack": "^1.0",
        "symfony/validator": "^4.4",
        "twig/extensions": "^1.5.1",
        "twig/twig": "^2.0",
        "willdurand/faker-bundle": "^1.3"
    },

    "require-dev": {
        "behat/behat": "^3.4",
        "behat/mink": "^1.7.1",
        "behat/mink-browserkit-driver": "^1.3.2",
        "behat/mink-extension": "^2.3.0",
        "behat/mink-goutte-driver": "^1.2.1",
        "behat/mink-selenium2-driver": "^1.3.1",
        "phing/phing": "^2.16",
        "symfony/dotenv": "^4.0",
        "symfony/phpunit-bridge": "^4.0",
        "symfony/profiler-pack": "^1.0"
    },

    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-create-project-cmd": [
            "@auto-scripts",
            "php vendor/bin/phing"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "branch-alias": "3.0",
        "symfony": {
            "allow-contrib": true,
            "require": "4.4.*"
        }
    }
}
