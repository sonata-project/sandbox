{% trans_default_domain 'FOSUserBundle' %}

<div class="card border-info">
    <div class="card-header blue lighten-4">
        {{ "title_user_edit_password" | trans({}, 'SonataUserBundle') }}
    </div>
    <div class="card-body">
        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-horizontal' } }) }}
            {{ form_widget(form) }}
            <div class="form-actions">
                <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-primary float-right" />
            </div>
        {{ form_end(form) }}
    </div>
</div>
