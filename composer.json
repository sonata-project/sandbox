{
    "name": "sonata-project/sandbox",
    "description": "Sonata Project's sandbox",

    "autoload": {
        "psr-0": { "": "src/" }
    },

    "require": {
        "php": ">=5.3.3",

        "twig/twig": "1.12.*",
        "twig/extensions": "1.0.*@dev",

        "symfony/symfony": "2.1.*",
        "symfony/assetic-bundle": "2.1.*",
        "symfony/swiftmailer-bundle": "2.1.*",
        "symfony/monolog-bundle": "2.1.*",

        "sensio/distribution-bundle": "2.1.*",
        "sensio/framework-extra-bundle": "2.1.*",
        "sensio/generator-bundle": "2.1.*",

        "jms/security-extra-bundle": "1.2.*",
        "jms/di-extra-bundle": "1.1.*",

        "doctrine/orm": ">=2.2.3,<2.4-dev@stable",
        "doctrine/doctrine-bundle": "1.0.*",
        "doctrine/doctrine-migrations-bundle": "dev-master",
        "doctrine/migrations": "dev-master",
        "doctrine/doctrine-fixtures-bundle": "2.1.*@dev",
        "doctrine/data-fixtures": "1.0.*@dev",

        "knplabs/gaufrette": "0.1.*",

        "sonata-project/easy-extends-bundle": "2.1.*",
        "sonata-project/intl-bundle": "2.1.*",
        "sonata-project/seo-bundle": "1.*",
        "sonata-project/formatter-bundle": "2.1.*",
        "sonata-project/doctrine-extensions": "1.*",
        "sonata-project/exporter": "1.*",
        "sonata-project/notification-bundle": "2.1.*",
        "sonata-project/admin-bundle": "2.1.*@dev",
        "sonata-project/block-bundle": "2.1.*",
        "sonata-project/user-bundle": "2.1.*@dev",
        "sonata-project/page-bundle": "2.1.*@dev",
        "sonata-project/media-bundle": "2.1.*@dev",
        "sonata-project/news-bundle": "2.1.*@dev",
        "sonata-project/doctrine-orm-admin-bundle": "2.1.*@dev",

        "symfony-cmf/routing-extra-bundle": "1.*@dev",
        "symfony-cmf/routing": "1.*@dev",

        "friendsofsymfony/user-bundle": "1.3.*",

        "dflydev/markdown": "1.0.2",
        "simplethings/entity-audit-bundle": "dev-master",
        "willdurand/faker-bundle": "dev-master",

        "kriswallsmith/assetic": "1.1.*@dev"
    },

    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "behat/mink-extension": "*",
        "behat/mink-goutte-driver": "*",
        "behat/behat": "2.4.*",
        "guzzle/guzzle": "3.0.*"
    },

    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ]
    },

    "config": {
        "bin-dir": "bin"
    },

    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    },
    "extra": {
        "branch-alias": {
            "dev-2.0": "2.0.x-dev",
            "dev-master": "2.1.x-dev"
        }
    }
}
